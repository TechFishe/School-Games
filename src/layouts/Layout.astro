---
	import NavBar from "@reactBlocks/NavBar";
	import FooterSlot from "@astroBlocks/FooterSlot.astro";
	import TitleText from "@reactBlocks/TitleText";

    interface Props{
        title: string
    }

    const {title}:Props = Astro.props;
---

<html lang="en" class="scroll-smooth overflow-x-hidden">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-snow bg-pitchBlack">
		<header id="top" class="flex items-center h-18 top-0 w-full backdrop-blur-sm bg-transparent">
			<TitleText text={title} client:load />
			<NavBar />
		</header>
		<slot />
		<footer class="mx-8 flex border-t-2 pr-2">
			<div class="w-full flex divide-x-[1px] divide-snow/10 flex-grow">
				<FooterSlot title="TechFishe Inc.">
					<li>
						<a href="https://techfishe.vercel.app" target="_blank" rel="noopener noreferrer" class="hover:underline hover:text-fuchsia-500 transition-colors ease-linear w-fit">Personal Site</a>
					</li>
					<li>
						<a href="https://bubble-neon.vercel.app" target="_blank" rel="noopener noreferrer" class="hover:underline hover:text-green-400 transition-colors ease-linear w-fit">Chat Project</a>
					</li>
					<li>
						<a href="https://15T.vercel.app" target="_blank" rel="noopener noreferrer" class="hover:underline hover:text-[#e56b6f] transition-colors ease-linear w-fit">Music Project</a>
					</li>
				</FooterSlot>
				<FooterSlot title="Tech Used">
					<li>
						<a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="hover:underline hover:text-orange-400 transition-colors ease-linear w-fit">Astro</a>
					</li>
					<li>
						<a href="https://react.dev" target="_blank" rel="noopener noreferrer" class="hover:underline hover:text-sky-700 transition-colors ease-linear w-fit">React</a>
					</li>
					<li>
						<a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="hover:underline hover:text-cyan-500 transition-colors ease-linear w-fit">Tailwind CSS</a>
					</li>     
				</FooterSlot>
			</div>
			<a href="#top" class="self-center aspect-square flex justify-center hover:text-moonstone transition-color ease-in relative group">
				<svg xmlns="http://www.w3.org/2000/svg" height="2rem" viewBox="0 0 384 512" fill="currentColor">
					<!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
					<path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"/>
				</svg>
				<span class="scale-0 group-hover:scale-100 absolute right-10 top-1/2 -translate-y-1/2 text-xs font-light min-w-max px-1 py-1/2 text-snow bg-[#384041]/50 rounded-sm transition-transform ease-in">To top</span>
			</a>
		</footer>
	</body>
</html>