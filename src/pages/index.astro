---
	import Layout from "@layouts/Layout.astro"
	import HomeChoice from "@reactBlocks/HomeChoice";
	import HomeText from "@astroBlocks/HomeText.astro";
---

<Layout title="Home">
	<main class="flex flex-col w-screen min-h-screen">
		<section id="one" class="bricks h-screen w-screen flex flex-col pb-[4.5rem]">
			<HomeText mainText="do u like " blueWord="games" useQuestion customClasses="mt-[30%]" />
			<a href="#two" class="group mt-18 w-fit self-center aspect-square relative flex justify-center hover:text-moonstone transition-color ease-in">
				<svg xmlns="http://www.w3.org/2000/svg" height="4rem" viewBox="0 0 384 512" fill="currentColor" class="group-hover:scale-[1.15] transition-transform ease-in">
					! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc.
					<path d="M169.4 470.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 370.8 224 64c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 306.7L54.6 265.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z"/>
				</svg>
			</a>
		</section>
		<section id="two" class="bricks h-screen w-screen flex flex-col">
			<HomeText mainText="do u like playing them in " blueWord="school" useQuestion />
			<HomeChoice client:visible />
		</section>
		<section id="three" class="h-screen flex flex-col items-center mt-30%">
			<span class="text-9xl font-black tracking-widest w-full text-center mt-20 select-none">then let me welcome you to <a href="/games" class="text-moonstone drop-shadow-[0_20px_15px_rgba(99,176,205,0.25)] hover:underline decoration-snow">heaven</a>.</span>
		</section>
	</main>
</Layout>

<style is:inline>
	#one{
		background-color: #171d1c;
		background-image: linear-gradient(to top, transparent 25%, #171D1C 75%), url("data:image/svg+xml,%3Csvg width='42' height='44' viewBox='0 0 42 44' xmlns='http://www.w3.org/2000/svg'%3E%3Cg id='Page-1' fill='none' fill-rule='evenodd'%3E%3Cg id='brick-wall' fill='%2363b0cd' fill-opacity='0.1'%3E%3Cpath d='M0 0h42v44H0V0zm1 1h40v20H1V1zM0 23h20v20H0V23zm22 0h20v20H22V23z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
	}
	#two{
		background-color: #171d1c;
		background-image: linear-gradient(to bottom, transparent 25%, #171D1C 75%), url("data:image/svg+xml,%3Csvg width='42' height='44' viewBox='0 0 42 44' xmlns='http://www.w3.org/2000/svg'%3E%3Cg id='Page-1' fill='none' fill-rule='evenodd'%3E%3Cg id='brick-wall' fill='%2363b0cd' fill-opacity='0.1'%3E%3Cpath d='M0 0h42v44H0V0zm1 1h40v20H1V1zM0 23h20v20H0V23zm22 0h20v20H22V23z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
	}
</style>
